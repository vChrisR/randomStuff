
#!/bin/bash

echo "- - -" > /sys/class/scsi_host/host0/scan

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/vmware/bin:$PATH
export HOME=/root

# Partition all extra disks and create physical volumes
for DISK in $(lsblk | grep -i disk | awk 'NR > 1 {print $1}')
 do
     echo "Processing $DISK"
     fdisk /dev/$DISK <<EOF
n
p
1


t
8e
w
EOF
     pvcreate /dev/${DISK}1
 done

# Create logical volumes for Oracle
vgcreate vg_app /dev/sdb1
lvcreate -l 100%FREE -n lv_app vg_app

# Create file systems
mkfs.ext4 /dev/vg_app/lv_app
mkdir -p /app

# Mount file systems
echo /dev/vg_app/lv_app /app ext4 defaults 1 2 >> /etc/fstab
mount -a

# Change owner to oracle user
chown -R oracle:oinstall  /app
chmod -R 775 /app
